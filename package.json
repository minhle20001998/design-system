{
  "name": "@uzh-bf/design-system",
  "version": "0.0.19",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/uzh-bf/design-system.git"
  },
  "maintainers": [
    "Roland Schlaefli <roland.schlaefli@bf.uzh.ch>"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build --entry src/index.ts --entry src/constants.js",
    "lint": "dts lint",
    "size": "size-limit",
    "dev": "ladle serve",
    "format": "prettier --write \"src/**/*.js\" \"src/**/*.ts\" \"src/**/*.tsx\" \"src/**/*.json\"",
    "test": "dts test --passWithNoTests",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.0.0",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "react": ">=17",
    "tailwind-merge": "^1.4.0",
    "tailwindcss": "^3.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/design-system.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/design-system.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@ladle/react": "2.0.2",
    "@size-limit/preset-small-lib": "7.0.8",
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/forms": "0.5.2",
    "@tailwindcss/line-clamp": "0.4.0",
    "@tailwindcss/typography": "0.5.4",
    "@tsconfig/create-react-app": "1.0.2",
    "@tsconfig/recommended": "1.0.1",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "10.4.7",
    "dts-cli": "1.5.2",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.0.0",
    "prettier-plugin-tailwindcss": "0.1.12",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup-plugin-postcss": "4.0.2",
    "size-limit": "7.0.8",
    "standard-version": "9.5.0",
    "tailwind-merge": "1.5.1",
    "tailwindcss": "3.1.6",
    "tailwindcss-radix": "^2.4.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "volta": {
    "node": "16.16.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.1.1",
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@radix-ui/react-dialog": "1.0.0",
    "@radix-ui/react-navigation-menu": "1.0.0",
    "@radix-ui/react-switch": "^1.0.0",
    "react-switch": "^7.0.0"
  }
}
